
{
  "user_schema": {
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "title": "The User Schema",
  "required": [
    "email",
    "password"
  ],
  "properties": {
    "email": {
      "$id": "#/properties/email",
      "type": "string",
      "title": "User Email Schema",
      "default": "",
      "examples": [
        "my-email@gmail.com"
      ],
      "pattern": "^(.*)$"
    },
    "password": {
      "$id": "#/properties/phoneNumber",
      "type": "string",
      "title": "User password number Schema",
      "default": "",
      "examples": [
        "00447307568957"
      ],
      "pattern": "(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[^A-Za-z0-9])(?=.{8,})"
    }
    }
  }
}

